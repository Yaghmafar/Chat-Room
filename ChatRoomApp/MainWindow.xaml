<Window x:Class="ChatRoomApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="چت روم"
        Height="600"
        Width="1000"
        Background="#F5F5F5"
        FlowDirection="RightToLeft"
        WindowStartupLocation="CenterScreen">

   <Window.Resources>
    <!-- استایل دکمه‌ها -->
    <Style TargetType="Button">
        <Setter Property="Background" Value="#2196F3"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Padding" Value="15,8"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            CornerRadius="4"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center" 
                                          VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#1976D2"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- استایل تکست باکس -->
    <Style TargetType="TextBox">
        <Setter Property="Padding" Value="10,8"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="#DDDDDD"/>
        <Setter Property="Background" Value="White"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
    </Style>

    <!-- استایل لیست باکس -->
    <Style TargetType="ListBox">
        <Setter Property="Background" Value="White"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="#DDDDDD"/>
        <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled"/>
        <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
    </Style>

    <!-- استایل آیتم‌های لیست پیام‌ها -->
    <Style TargetType="ListBoxItem">
        <Setter Property="Padding" Value="10"/>
        <Setter Property="Margin" Value="0,5"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListBoxItem">
                    <Border Background="#F8F9FA"
                            BorderBrush="#DDDDDD"
                            BorderThickness="1"
                            CornerRadius="4"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- دکمه اکسل -->
        <Button Grid.Row="0" 
                Content="خروجی اکسل" 
                Width="120"
                Height="40"
                Margin="10"
                HorizontalAlignment="Left"
                Click="ExportToExcel_Click"
                ToolTip="ذخیره چت‌ها در فایل اکسل"/>

        <!-- محتوای اصلی -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- سایدبار کاربران آنلاین -->
            <Border Grid.Column="0"
                    Width="250"
                    Margin="0,0,15,0"
                    Background="White"
                    CornerRadius="8"
                    Effect="{DynamicResource MaterialDesignShadowDepth2}">
                <StackPanel Margin="10">
                    <TextBlock Text="کاربران آنلاین"
                               FontWeight="Bold"
                               FontSize="16"
                               Margin="10"
                               HorizontalAlignment="Center"/>
                    <ListBox x:Name="OnlineUsersList"
                             BorderThickness="0"
                             Background="Transparent">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="8"
                                        Margin="0,2"
                                        Background="#F8F9FA"
                                        CornerRadius="4">
                                    <StackPanel Orientation="Horizontal">
                                        <Ellipse Width="8"
                                                 Height="8"
                                                 Fill="#4CAF50"
                                                 Margin="0,0,8,0"
                                                 VerticalAlignment="Center"/>
                                        <TextBlock Text="{Binding}"
                                                   VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
            </Border>

            <!-- بخش اصلی چت -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- لیست پیام‌ها -->
                <Border Grid.Row="0"
                        Margin="0,0,0,15"
                        Background="White"
                        CornerRadius="8"
                        Effect="{DynamicResource MaterialDesignShadowDepth2}">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ListBox x:Name="MessagesList" 
                                 Margin="5"
                                 BorderThickness="0">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border Padding="10"
                                            Margin="0,5"
                                            Background="#F8F9FA"
                                            CornerRadius="4">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="{Binding}"
                                                       VerticalAlignment="Center"
                                                       TextWrapping="Wrap"
                                                       Grid.Column="0"/>
                                            <Button Content="حذف"
                                                    Width="60"
                                                    Height="40"
                                                    Background="#DC3545"
                                                    Margin="10,0,0,0"
                                                    Grid.Column="1"
                                                    Click="DeleteMessage_Click"
                                                    ToolTip="حذف پیام"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </ScrollViewer>
                </Border>

                <!-- باکس ورودی پیام -->
                <Grid Grid.Row="1" Margin="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0"
                            Margin="0,0,10,0"
                            CornerRadius="4"
                            Background="White"
                            Effect="{DynamicResource MaterialDesignShadowDepth1}">
                       <TextBox x:Name="MessageTextBox"
         BorderThickness="0"
         VerticalContentAlignment="Center"
         ToolTip="پیام خود را وارد کنید"
         KeyDown="MessageTextBox_KeyDown"/>
                    </Border>

                    <Button Content="ارسال"
                            Grid.Column="1"
                            Click="SendMessage_Click"
                            Width="120"
                            Height="45"
                            ToolTip="ارسال پیام"/>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>