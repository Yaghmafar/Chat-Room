<Window x:Class="ChatRoomApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="چت روم" Height="600" Width="1000">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- دکمه خروجی اکسل -->
        <Button Content="خروجی اکسل" Width="100" Height="40" Margin="10" HorizontalAlignment="Right" VerticalAlignment="Top" Click="ExportToExcel_Click"/>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- لیست پیام‌ها -->
            <ListBox x:Name="MessagesList" Grid.Row="0" Margin="10">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="{Binding}" VerticalAlignment="Center" Grid.Column="0"/>
                            <Button Content="حذف" Width="50" Margin="5,0,0,0" Grid.Column="1" Click="DeleteMessage_Click"/>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <!-- باکس ورودی پیام -->
            <Grid Grid.Row="1" Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox x:Name="MessageTextBox" 
                         Grid.Column="0" 
                         Margin="0,0,10,0"/>

                <Button Content="ارسال" 
                        Grid.Column="1" 
                        Click="SendMessage_Click" 
                        Width="100"/>
            </Grid>
        </Grid>

        <!-- سایدبار کاربران آنلاین -->
        <Border Grid.Column="1" 
                Width="200" 
                Background="#F0F0F0" 
                BorderBrush="#CCCCCC" 
                BorderThickness="1">
            <StackPanel>
                <TextBlock Text="کاربران آنلاین" 
                           FontWeight="Bold" 
                           Margin="10" 
                           HorizontalAlignment="Center"/>
                <ListBox x:Name="OnlineUsersList"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
